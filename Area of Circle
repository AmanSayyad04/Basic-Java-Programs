package tutorial1;
import java.util.*; 

public class areaOfCirc {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		  System.out.println("Enter the radius: ");
		  int r =sc.nextInt();
		  
		  double ans = 3.14 * r * r;
		  
		  System.out.println("Area of circle is: " + ans);

	}

}
